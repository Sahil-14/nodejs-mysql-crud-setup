<%- include('../partials/header')%>
<div class="container">
<form action="http://localhost:3000/event/edit/<%= item[0].e_id %>" method="POST" class="col col-sm-12 mt-5">
    <input type="hidden" name="e_id" value="<%= item[0].e_id %>">
    <div class="form-group row">
        <label for="e_name" class="col-2 col-form-label">Name:</label>
        <div class="col-10">
            <input type="text" name="e_name" value="<%= item[0].e_name %>" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="e_start_date" class="col-2 col-form-label">Start date:</label>
        <div class="col-10">
            <input type="date" name="e_start_date" value="<%= item[0].e_start_date %>" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="e_end_date" class="col-2 col-form-label">End date:</label>
        <div class="col-10">
            <input type="date" name="e_end_date" value="<%= item[0].e_end_date %>" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="e_desc" class="col-2 col-form-label">Description</label>
        <div class="col-10">
           <textarea name="e_desc" id="e_desc" cols="30" rows="4" class="form-control"><%= item[0].e_desc %></textarea>
        </div>
    </div>
    <div class="form-group row">
        <label for="e_location" class="col-2 col-form-label">Location</label>
        <div class="col-10">
           <textarea name="e_location" id="e_location" cols="30" rows="4" class="form-control"><%= item[0].e_location %></textarea>
        </div>
    </div>
    <div class="form-group row">
        <label for="e_location" class="col-2 col-form-label" style="color: #fff;">Click here to submit</label>
        <div class="col-10">
           <input type="submit" name="submit" value="Save event" class="btn btn-primary btn-lg">
        </div>
    </div>
</form>
</div>

<%- include('../partials/footer')%>