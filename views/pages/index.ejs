 <%- include('../partials/header')%>
<div class="" style="margin-left: 30px;margin-right: 30px;">
    <div class="col col-sm-12 mt-3">
        <a href="/event/add" class="btn btn-success btn-lg">Add a new Event</a>
    </div>
</div>
<br>






     <div class="" style="margin-left: 30px;margin-right: 30px;">
    <div class="col col-sm-12">
        <% if(items.length > 0){ %>
            <table>
                <thead>
                    <tr style="border-bottom:1.5px solid rgb(219, 212, 226);" >
                        <th style="width: 1%;text-align: center;padding-right: 3px;">ID</th>
                        <th style="width: 49%">Name</th>
                        <th style="width: 20%" class="py-2">Description</th>
                        <th style="width: 10%">Location</th>
                        <th solspan="2" style="width: 20%;text-align: center;">Actions</th>
                    </tr>
                </thead>
                <tbody >
                    <% items.forEach((item,index) => { %>
                        <tr class="m-3"  style="border-bottom:1px solid rgb(219, 212, 226)" >
                            <td style="width: 1%;text-align: center;padding-right: 3px;"><%= index +1 %></td>
                            <td style="width: 49%"><%= item.e_name %></td>
                            <td style="width: 20%"><%= item.e_desc %></td>
                            <td style="width: 10%"><%= item.e_location %></td>
                            <td solspan="2" style="width: 20%;text-align: center;">
                                <a href="/event/edit/<%= item.e_id %>" class="btn btn-success m-2">Edit</a>
                                <a href="/event/delete/<%= item.e_id %>" class="btn btn-danger m-2">Delete</a>
                            </td>
                        </tr>
                       <% }) %>
                </tbody>
            </table>
            <% }else{ %>
                <p><strong>There are no record in the database</strong></p>
                <% } %>
    </div>
</div> 

<%- include('../partials/footer')%>